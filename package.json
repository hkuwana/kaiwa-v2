{
	"name": "kaiwa",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node build",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --write . && eslint --fix .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "pnpm run build && playwright test",
		"test:unit:watch": "vitest --watch",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:auth": "vitest run src/lib/server/auth/auth.test.ts",
		"test:system": "tsx src/lib/test-other-parts.ts",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:run-custom-migration": "tsx scripts/run-migration.ts",
		"smoke:test": "playwright test --grep @smoke",
		"smoke:test:prod": "BASE_URL=https://kaiwa.fly.dev playwright test --grep @smoke",
		"smoke:test:headed": "playwright test --grep @smoke --headed",
		"smoke:test:all": "tsx scripts/run-smoke-tests.ts",
		"ci": "pnpm run lint && pnpm run check && pnpm run test:unit && pnpm run test:e2e && pnpm run build",
		"ci:smoke": "pnpm run lint && pnpm run check && pnpm run smoke:test && pnpm run build",
		"deploy": "fly console --dockerfile Dockerfile.builder -C \"/srv/deploy.sh\" --env=FLY_API_TOKEN=$(fly auth token)",
		"db:push:prod": "dotenv -e .env.production -- drizzle-kit push",
		"db:push:dev": "dotenv -e .env.development -- drizzle-kit push",
		"db:migrate:prod": "dotenv -e .env.production -- drizzle-kit migrate",
		"db:migrate:dev": "dotenv -e .env.development -- drizzle-kit migrate",
		"db:seed:dev": "dotenv -e .env.development  -- tsx ./src/lib/server/db/seed.ts",
		"db:seed:prod": "dotenv -e .env.production  -- tsx ./src/lib/server/db/seed.ts",
		"db:nuke:dev": "dotenv -e .env.development -- tsx ./src/lib/server/db/nuke.ts",
		"db:nuke:prod": "dotenv -e .env.production  -- tsx ./src/lib/server/db/nuke.ts",
		"db:clear:dev": "dotenv -e .env.development tsx ./src/lib/server/db/nuke.ts clear",
		"db:health": "tsx scripts/db-health.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
