		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"rehype-highlight": "^7.0.2",
		"rehype-slug": "^6.0.0",
		"remark-gfm": "^4.0.1",
		"svelte": "^5.0.0",
